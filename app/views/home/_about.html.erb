<% if @about.present? %>
  <section class="w-full hidden md:block bg-white" data-controller="scroll-active" data-scroll-active-target="section">
    <div class="container mx-auto py-20">
      <div class="flex flex-col-reverse md:flex-row justify-between items-center gap-10">
        <div class="md:w-7/12">
          <div class="mb-5 top-down-animation">
            <div class="">
              <h3 class="uppercase poppins-bold text-4xl text-zinc-600"><%= @about.sumary %></h3>
            </div>
          </div>
          <div class="">
            <div class="mb-10 left-right-animation">
              <span class="text-zinc-600 poppins-regular text-sm"><%= @about.text.html_safe %></span>
            </div>

          </div>
        </div>
        <% if @about.photo.present? %>
          <div class="md:w-5/12 right-left-animation">
            <%= image_tag @about.photo_url %>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>
